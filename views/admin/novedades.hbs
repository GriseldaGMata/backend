<html>
  <div class="container" style="margin: 50px auto">

    {{! //fila1 }}
    <div class="row">
      <div class="col">
        <p class="text-end">Hola
          {{usuario}}!
          <a href="/admin/login/logout" 
          class="btn btn-outline-primary">Cerrar sesion
          <i class="fa fa-sign-out"></i></a>
        </p>
      </div>
    </div>
    {{! // fin fila1 }}
    {{! // fila2 }}
    <div class="row">
      <div class="col-7">
        <h3>Listado de novedades:</h3>
      </div>
      <div class="col-5 text-end">
        <a class="btn btn-outline-success" href="/admin/novedades/agregar"><i
            class="fa fa-plus" aria-hidden="true"></i>Crear novedad</a>
      </div>
    </div>
    {{! // fin fila2 }}


    {{!-- grilla de listado de novedades   --}}

    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Titulo</th>
              <th scope="col">Subtitulo</th>
              <th scope="col">Cuerpo</th>
              <th scope="col">Imagen</th>
              <th scope="col" class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each novedades}}
              <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{subtitulo}}</td>
                <td>{{cuerpo}}</td>
                <td>{{{imagen}}}</td>
                  <td class="text-end">
                  <a href="/admin/novedades/modificar/{{id}}"title="Editar"class="btn btn-outline-warning">
                  <i class="fa fa-pencil"></i></a>
                  <a href="/admin/novedades/eliminar/{{id}}"title="Eliminar" class="btn btn-outline-danger">
                  <i class="fa fa-trash"></i></a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
   </html>